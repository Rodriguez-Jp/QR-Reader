{
  "manifest_version": 3,
  "name": "QR Reader",
  "version": "1.0",
  "description": "A simple extension to read QR codes on screen",
  "host_permissions": ["https://*/*"],
  "permissions": ["tabs", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["content.css"],
      "js": ["./node_modules/qrcode-reader/dist/index.js", "contentScript.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
